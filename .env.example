# Paradex Trader Configuration
# Copy this file to .env and fill in your values

# ==================== API Configuration ====================
# Required: Your Starknet L2 credentials from Paradex
PARADEX_L2_PRIVATE_KEY=your_private_key_here
PARADEX_L2_ADDRESS=your_l2_address_here

# Environment: "prod" or "testnet"
PARADEX_ENVIRONMENT=prod

# ==================== Trading Parameters ====================
# Market to trade
TRADING__MARKET=BTC-USD-PERP

# Base trade size in BTC
TRADING__BASE_TRADE_SIZE=0.001

# Maximum position size in BTC
TRADING__MAX_POSITION_SIZE=0.005

# Leverage (1-50)
TRADING__LEVERAGE=10

# Maximum spread % to enter trade
TRADING__MAX_SPREAD_PCT=0.015

# Minimum signal strength to trade (0-1)
TRADING__MIN_SIGNAL_STRENGTH=0.4

# ==================== Risk Management ====================
# Max loss per trade (as decimal, e.g., 0.03 = 3%)
RISK__MAX_LOSS_PER_TRADE_PCT=0.03

# Default stop loss percentage
RISK__DEFAULT_STOP_LOSS_PCT=0.02

# Default take profit percentage
RISK__DEFAULT_TAKE_PROFIT_PCT=0.03

# Max daily loss percentage
RISK__MAX_DAILY_LOSS_PCT=0.05

# Max total drawdown percentage
RISK__MAX_TOTAL_DRAWDOWN_PCT=0.15

# Max consecutive losses before cooldown
RISK__MAX_CONSECUTIVE_LOSSES=5

# Cooldown period in seconds after max losses
RISK__COOLDOWN_SECONDS=300

# Kelly criterion settings
RISK__USE_KELLY_SIZING=true
RISK__KELLY_FRACTION=0.25

# ==================== Strategy Configuration ====================
# Enabled strategies (comma-separated)
# Options: trend_follow, mean_reversion, momentum
STRATEGY__ENABLED_STRATEGIES=["trend_follow", "mean_reversion", "momentum"]

# Trend following parameters
STRATEGY__TREND_ENTRY_LOOKBACK=20
STRATEGY__TREND_EXIT_LOOKBACK=10
STRATEGY__TREND_ATR_PERIOD=14
STRATEGY__TREND_STOP_LOSS_ATR=2.0
STRATEGY__TREND_MIN_STRENGTH=0.3

# Mean reversion parameters
STRATEGY__MR_ENTRY_Z=2.0
STRATEGY__MR_EXIT_Z=0.5
STRATEGY__MR_STOP_LOSS_PCT=0.02
STRATEGY__MR_MAX_HOLD_MINUTES=30
STRATEGY__MR_RSI_OVERSOLD=25
STRATEGY__MR_RSI_OVERBOUGHT=75

# Momentum parameters
STRATEGY__MOM_MIN_MOMENTUM_PCT=0.1
STRATEGY__MOM_VOLUME_RATIO=2.0
STRATEGY__MOM_TAKE_PROFIT_PCT=0.0015
STRATEGY__MOM_STOP_LOSS_PCT=0.0008
STRATEGY__MOM_MAX_HOLD_MINUTES=3

# ==================== Learning Configuration ====================
# Thompson Sampling
LEARNING__EXPLORATION_BUDGET=100.0
LEARNING__MIN_TRIALS_PER_STRATEGY=20
LEARNING__THOMPSON_PRIOR_ALPHA=1.0
LEARNING__THOMPSON_PRIOR_BETA=1.0
LEARNING__EXPLOITATION_THRESHOLD=0.15

# Online learning
LEARNING__ONLINE_LEARNING_ENABLED=true
LEARNING__ONLINE_LEARNING_RATE=0.01
LEARNING__ONLINE_L2_REGULARIZATION=0.01
LEARNING__ONLINE_MIN_SAMPLES=20
LEARNING__DRIFT_SENSITIVITY=0.002

# ==================== System Configuration ====================
# Intervals (in seconds)
SYSTEM__TRADE_CHECK_INTERVAL=10.0
SYSTEM__SNAPSHOT_INTERVAL=5.0
SYSTEM__HEARTBEAT_INTERVAL=60.0

# Database
SYSTEM__DB_PATH=trading.db

# Logging
SYSTEM__LOG_LEVEL=INFO
SYSTEM__LOG_FILE=paradex_trader.log
SYSTEM__LOG_TO_CONSOLE=true

# State persistence
SYSTEM__STATE_SAVE_INTERVAL=300
SYSTEM__STATE_FILE=trader_state.json
